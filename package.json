{
    "name": "ababil_studio",
    "version": "1.0.0",
    "description": "Ababil Studio - Electron + React App",
    "homepage": ".",
    "private": true,
    "main": "main.js",
    "author": "mozaddedalfeshani",
    "license": "MIT",
    "keywords": [
        "electron",
        "reactjs",
        "typescript"
    ],
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-radio-group": "^1.3.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.126",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/react-syntax-highlighter": "^15.5.13",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron": "^39.2.7",
        "hugeicons-react": "^0.3.0",
        "koffi": "^2.15.0",
        "lucide-react": "^0.562.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-scripts": "5.0.1",
        "react-syntax-highlighter": "^16.1.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0",
        "tw-animate-css": "^1.4.0",
        "typescript": "^4.9.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "start:dev": "electronmon --trace-warnings .",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "NODE_ENV=production electron .",
        "electron:dev": "electronmon --trace-warnings .",
        "build:rust": "cd core && cargo build --release",
        "build:rust:mac": "cd core && cargo build --release --target aarch64-apple-darwin && cargo build --release --target x86_64-apple-darwin",
        "build:rust:linux": "cd core && cargo build --release --target x86_64-unknown-linux-gnu",
        "build:rust:windows": "cd core && cargo build --release --target x86_64-pc-windows-msvc",
        "copy:rust:mac": "cp core/target/release/libababil_core.dylib services/libababil_core.dylib || cp core/target/aarch64-apple-darwin/release/libababil_core.dylib services/libababil_core.dylib || cp core/target/x86_64-apple-darwin/release/libababil_core.dylib services/libababil_core.dylib",
        "copy:rust:linux": "cp core/target/x86_64-unknown-linux-gnu/release/libababil_core.so services/libababil_core.so",
        "copy:rust:windows": "copy core\\target\\x86_64-pc-windows-msvc\\release\\ababil_core.dll services\\ababil_core.dll",
        "electron:build": "electron-builder",
        "electron:build:mac": "electron-builder --mac",
        "electron:build:linux": "electron-builder --linux",
        "electron:build:windows": "electron-builder --win",
        "prebuild:rust": "mkdir -p services"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^10.4.23",
        "electron-builder": "^24.13.3",
        "electronmon": "^2.0.4",
        "postcss": "^8.5.6",
        "tailwindcss": "^3"
    },
    "build": {
        "appId": "com.ababil.studio",
        "productName": "Ababil Studio",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "build/**/*",
            "main.js",
            "preload.js",
            "services/**/*",
            "package.json",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "icon": "public/logo512.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Development"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "public/logo512.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
